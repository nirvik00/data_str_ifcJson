                </td>
            </tr>
        </table>
    </div>
    <br>

    <br>
    <div id="result"></div>
</div>

<canvas id="nodeCanvas"></canvas>

<script>
    /// global variables ///
    var data = [...DATA];
    var NodeArr = generateRelation(data);
    var copyNodeArr = [...NodeArr];
    var canvas = document.getElementById('nodeCanvas');
    var ctx = canvas.getContext('2d');

    init();

    window.onresize = function () {
        drawOnCanvas();
    };

    function init() {
        let v = document.getElementById('treeHt').value;
        document.getElementById('treeHt_p').innerHTML = "Height of tree levels (%): " + v;

        let r = document.getElementById('radius').value;
        document.getElementById('radius_p').innerHTML = "radius of entities (%): " + r;


        var div2 = document.getElementById("selArr");
        while (div2.hasChildNodes()) {
            div2.removeChild(div2.firstChild);
        }

        var b0 = document.createElement('option');
        b0.text = "All Selected";
        b0.value = -1;
        div2.appendChild(b0);

        for (var i = 0; i < data.length; i++) {
            var b = document.createElement('option');
            b.text = "Array " + i;
            b.value = i;
            div2.appendChild(b);
        }

        drawOnCanvas();
    }
</script>



<script>
    document.getElementById("submitQuery").onclick = function () {
        drawOnCanvas();
    }
</script>